let
  var s : Char;
  
  type a ~
    record
      x : Integer
    end;

  type b ~
    record 
      x : Integer,
      y : Integer
    end;

  type c ~
   record
     x : Integer,
     y : Integer,
     z : Integer
   end;

  var p1 : Pointer a;
  var p2 : Pointer b;
  var p3 : Pointer c

in
begin
  p1 := new a;
  p2 := new b;
  p3 := new c;
  delete p1;
  !p1 := nil;
  delete p2;
  !p2 := nil;
  p1 := new c
end